<Page
    x:Class="MyMovieCollectionProjekat.MyMovieCollection.Views.AdministratorView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:MyMovieCollectionProjekat.MyMovieCollection.Views"
    xmlns:data="using:MyMovieCollectionProjekat.MyMovieCollection.Models"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Margin="0,0,-84,0">
        <Grid.Background>
            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                <GradientStop Color="Black" Offset="0"/>
                <GradientStop Color="White" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>

        <Grid.RowDefinitions>
            <RowDefinition Height="63*"/>
            <RowDefinition Height="63*"/>
            <RowDefinition Height="63*"/>
            <RowDefinition Height="63*"/>
            <RowDefinition Height="63*"/>
            <RowDefinition Height="63*"/>
            <RowDefinition Height="63*"/>
            <RowDefinition Height="63*"/>
            <RowDefinition Height="11*"/>
            <RowDefinition Height="52*"/>
            <RowDefinition Height="63*"/>
            <RowDefinition Height="63*"/>
            <RowDefinition Height="63*"/>
            <RowDefinition Height="63*"/>
            <RowDefinition Height="63*"/>



        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="37*"/>
            <ColumnDefinition Width="37*"/>
            <ColumnDefinition Width="37*"/>
            <ColumnDefinition Width="37*"/>
            <ColumnDefinition Width="37*"/>
            <ColumnDefinition Width="37*"/>
            <ColumnDefinition Width="37*"/>
            <ColumnDefinition Width="8*"/>
            <ColumnDefinition Width="30*"/>
            <ColumnDefinition Width="37*"/>
            <ColumnDefinition Width="37*"/>
            <ColumnDefinition Width="37*"/>
            <ColumnDefinition Width="37*"/>


            <ColumnDefinition Width="37*"/>
        </Grid.ColumnDefinitions>



        <TextBlock x:ConnectionId='1' x:Name="textBlock1" HorizontalAlignment="Left" Height="70" TextWrapping="Wrap" Text="MyMovieCollection" VerticalAlignment="Top" Width="531" FontFamily="Gigi" FontSize="48" FontWeight="Bold" Grid.ColumnSpan="7" Foreground="#FFF7F7F7" Grid.Column="6" Margin="72,-7,0,0"                                                Grid.RowSpan="2"/>
        <TextBlock x:ConnectionId='2' x:Name="textBlock3" HorizontalAlignment="Left" Height="67" Margin="27,33,-75,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="307" FontFamily="Segoe Script" FontSize="24" Grid.ColumnSpan="8" Grid.Column="5" Foreground="#FF7D1FEE" Grid.RowSpan="3" Text=""/>
        <RelativePanel x:ConnectionId='3' x:Name="panelKorisnikDetalji" HorizontalAlignment="Left" Margin="97,31,0,0" Grid.RowSpan="10" Width="428" Grid.ColumnSpan="6" Grid.Column="6" Grid.Row="2" Background="#FFC8A09A">
            <TextBlock x:ConnectionId='9' x:Name="imeKorisnik" Text="{Binding Path = PisiIme}" HorizontalAlignment="Left" Height="42" Margin="184,175,-313,-197" TextWrapping="Wrap" VerticalAlignment="Top" Width="191" Foreground="#FF518C7D" FontSize="33" FontFamily="Segoe Script">
            	<Run Foreground="#FF71DDC2" Text="Ime"/>
            </TextBlock>
            <TextBlock x:ConnectionId='10' x:Name="prezimeKorisnik" HorizontalAlignment="Left" Height="40" Margin="158,222,-298,-242" TextWrapping="Wrap" Text="{Binding Path = PisiPrezime}" VerticalAlignment="Top" Width="202" Foreground="#FF90DFBE" FontSize="33" FontFamily="Segoe Script"/>
            <TextBlock x:ConnectionId='11' x:Name="mailKorisnik" HorizontalAlignment="Left" Height="44" Margin="184,289,-324,-313" TextWrapping="Wrap" VerticalAlignment="Top" Width="202" Foreground="#FFF9F2F2" FontSize="26" FontFamily="Segoe Script">
            	<Run Foreground="#FFA5D9C3" Text="{Binding Path = PisiMail}"/>
            </TextBlock>
            <TextBlock x:ConnectionId='12' x:Name="usernameKorisnik" Height="33" Margin="158,333,-386,-346" TextWrapping="Wrap" VerticalAlignment="Top" Foreground="White" FontSize="26" FontFamily="Segoe Script">
            	<Run Foreground="#FF92D9B9" Text="{Binding Path = PisiUserName}"/>
            </TextBlock>
            <TextBlock x:ConnectionId='13' x:Name="registracijaKorisnik" HorizontalAlignment="Left" Height="44" Margin="92,371,-298,-395" TextWrapping="Wrap" VerticalAlignment="Top" Width="268"                                                Foreground="#FFFDFDFD" FontSize="26" FontFamily="Segoe Script">
            	<Run Foreground="#FF8FE5BE" Text="{Binding Path = PisiDatumReg}"/>
            	<Run Foreground="#FFA2DDC3" />
            </TextBlock>
            <Image x:ConnectionId='14' x:Name="image" HorizontalAlignment="Left" Height="160" Margin="130,10,-321,-170" VerticalAlignment="Top" Width="191"/>
        </RelativePanel>
        <TextBlock x:ConnectionId='4' x:Name="textBlock4" HorizontalAlignment="Right" Margin="0,17,29,0" Grid.Row="1" TextWrapping="Wrap" VerticalAlignment="Top" Grid.ColumnSpan="5" Width="382" Height="46" Grid.Column="4" Grid.RowSpan="2">
            <TextBlock.Foreground>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="#FFC58175" Offset="0.383"/>
                    <GradientStop Color="#FF00F6FF" Offset="1"/>
                </LinearGradientBrush>
            </TextBlock.Foreground>
        	<Run FontWeight="Bold" FontSize="27" FontFamily="Segoe Script" Text="&#x9;Podac"/>
        	<Run FontWeight="Bold" FontSize="27" FontFamily="Segoe Script" Text="i "/>
        	<Run FontWeight="Bold" FontSize="27" FontFamily="Segoe Script" Text="o korisni"/>
        	<Run FontWeight="Bold" FontSize="27" FontFamily="Segoe Script" Text="c"/>
        	<Run FontWeight="Bold" FontSize="27" FontFamily="Segoe Script" Text="ima"/>
        </TextBlock>
        <Button x:ConnectionId='5' x:Name="button" Grid.ColumnSpan="5" Content="Izbriši korisnika" HorizontalAlignment="Left" Height="101" Grid.Row="12" VerticalAlignment="Top" Width="420" Background="#33A30505" Grid.RowSpan="3" Grid.Column="1" FontFamily="Segoe Script" FontSize="25" FontWeight="Bold" Margin="59,25,0,0"/>
        <Button x:ConnectionId='6' x:Name="button_Copy" Grid.ColumnSpan="5" Content="Postavi za admina" HorizontalAlignment="Left" Height="101" Grid.Row="12" VerticalAlignment="Top" Width="421" Grid.Column="7" Background="#332DB3A2" Grid.RowSpan="3" FontFamily="Segoe Script" FontSize="25" FontWeight="Bold" Margin="0,25,0,0"/>
        <Button x:ConnectionId='7' x:Name="buttstrelica"  Command="{Binding PrikaziDetaljeKorisnik}" Content="&gt;&gt;" RenderTransformOrigin="10.538,3.906" Margin="78.307,28.698,0,10.46" Width="103.206" Height="70.842" Grid.Column="5" Grid.Row="6" UseLayoutRounding="False" d:LayoutRounding="Auto" FontSize="28" Grid.ColumnSpan="2" Grid.RowSpan="3" FontWeight="Bold">
            <Button.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="#FFCD9C95" Offset="0"/>
                    <GradientStop Color="#FFC5FAF9" Offset="1"/>
                </LinearGradientBrush>
            </Button.Background>
            <Button.RenderTransform>
                <CompositeTransform Rotation="0.418"/>
            </Button.RenderTransform>
        </Button>
        <ListBox x:ConnectionId='8' x:Name="listaKorisnika" ItemsSource="{Binding Path=Korisnici}" SelectedValue="{Binding Path=OdabraniKorisnik, Mode=TwoWay}" Grid.ColumnSpan="5" Grid.Column="1" HorizontalAlignment="Left" Height="415" Margin="59,31,0,0" Grid.Row="2" Grid.RowSpan="10" VerticalAlignment="Top" Width="420" Background="#FFABD2D6"/>

    </Grid>
</Page>

