        <TextBox x:Name="textBox_Copy2" Grid.Column="1" HorizontalAlignment="Left" Height="0" Margin="109.667,309,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="378"/>
        <DatePicker Grid.Column="1" HorizontalAlignment="Left" Height="35" Margin="109.667,269,0,0" VerticalAlignment="Top" Width="378"/>

    </Grid>
</Page>
