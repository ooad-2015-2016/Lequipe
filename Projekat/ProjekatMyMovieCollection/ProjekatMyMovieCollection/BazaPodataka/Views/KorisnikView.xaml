        	<Run Text="r"/>
        	<Run Text=" profile"/>
        </TextBlock>
        <TextBlock x:Name="textBlock" HorizontalAlignment="Left" Height="35" Margin="33,194,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="110" SelectionChanged="textBlock_SelectionChanged" RenderTransformOrigin="1.273,0.476" Grid.ColumnSpan="2" FontFamily="Segoe Script" FontSize="18">
