        <TextBlock x:Name="textBlock_Copy6" HorizontalAlignment="Left" Height="35" Margin="43.667,139,0,0" TextWrapping="Wrap" Text="Novi password:" VerticalAlignment="Top" Width="110" Grid.Column="1" Grid.Row="3" FontFamily="Segoe Script" FontSize="18"/>
        <TextBlock x:Name="textBlock_Copy7" HorizontalAlignment="Left" Height="35" Margin="43.667,174,0,0" TextWrapping="Wrap" Text="Ponovite password:" VerticalAlignment="Top" Width="165" Grid.Column="1" Grid.Row="3" FontFamily="Segoe Script" FontSize="18"/>
        <Button x:Name="button" Grid.ColumnSpan="2" Content="Promjena postavki korisničkog računa" HorizontalAlignment="Left" Height="51" Margin="0,10,0,0" Grid.Row="2" VerticalAlignment="Top" Width="531" Click="button_Click" Grid.RowSpan="2" FontFamily="Segoe Script" FontSize="20"/>
