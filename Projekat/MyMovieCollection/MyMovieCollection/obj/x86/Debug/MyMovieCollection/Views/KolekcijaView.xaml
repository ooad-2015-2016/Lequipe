<Page
    x:Class="MyMovieCollection.MyMovieCollection.Views.KolekcijaView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:MyMovieCollection.MyMovieCollection.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d" Width="741" Height="605.333">

    <Grid Margin="10,10,0,0.333">
        <Grid.Background>
            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                <GradientStop Color="Black" Offset="0"/>
                <GradientStop Color="#BFFFFFFF" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>

        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>


        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="32*"/>
            <ColumnDefinition Width="33*"/>
            <ColumnDefinition Width="33*"/>
            <ColumnDefinition Width="33*"/>
            <ColumnDefinition Width="33*"/>
            <ColumnDefinition Width="33*"/>
            <ColumnDefinition Width="33*"/>
            <ColumnDefinition Width="33*"/>
            <ColumnDefinition Width="33*"/>
            <ColumnDefinition Width="33*"/>
            <ColumnDefinition Width="33*"/>

        </Grid.ColumnDefinitions>
        <TextBlock x:ConnectionId='1' x:Name="textBlock1" HorizontalAlignment="Left" Height="37" Margin="67.333,33,0,0" TextWrapping="Wrap" Text="MyMovieCollection" VerticalAlignment="Top" Width="339" FontFamily="SketchFlow Print" FontSize="36" FontWeight="Bold" Grid.ColumnSpan="6" Grid.Column="2" Foreground="#FFFBFBFB"/>
        <ComboBox x:ConnectionId='2' x:Name="comboBox" PlaceholderText="Izaberi kolekciju
" HorizontalAlignment="Left" Height="35" Margin="55,45,0,0" VerticalAlignment="Top" Width="213" FontFamily="Segoe Script" Grid.ColumnSpan="4" Grid.Row="3" Grid.Column="3"/>
        <Button x:ConnectionId='3' x:Name="button" Command="{Binding Path=DodajKolekciju}" Content="Dodaj kolekciju&#xD;&#xA;" HorizontalAlignment="Left" Height="32" Margin="47,58,0,0" VerticalAlignment="Top" Width="159" FontFamily="Segoe Script" Grid.Row="1" Grid.ColumnSpan="3" Grid.RowSpan="2" Foreground="#FFC1AFAF"                     />
        <Button x:ConnectionId='4' x:Name="button1" Content="Izbriši kolekciju&#xD;&#xA;" Command="{Binding Path=IzbrisiKolekciju}" HorizontalAlignment="Left" Height="32" Margin="23,58,0,0" VerticalAlignment="Top" Width="175" FontFamily="Segoe Script" Grid.ColumnSpan="3" Grid.Column="7" Grid.Row="1" Grid.RowSpan="2" Foreground="#FFE8E0E0"/>
        <TextBlock x:ConnectionId='5' x:Name="textBlock" HorizontalAlignment="Left" Height="29" Margin="13,10,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="187" FontFamily="Segoe Script" FontSize="14" Grid.ColumnSpan="5" Grid.Row="4">
        	<Run Text="Filmovi u kolekciji"/>
        	<LineBreak/>
        	<Run/>
        </TextBlock>
        <ListView x:ConnectionId='6' x:Name="listView" HorizontalAlignment="Left" Height="230" VerticalAlignment="Top" Width="304"                                              Background="#FFFAF5F5" Grid.ColumnSpan="5" Grid.Row="4" Grid.RowSpan="4" Margin="31,44,0,0"/>
        <TextBlock x:ConnectionId='7' x:Name="textBlock3" Grid.ColumnSpan="5" HorizontalAlignment="Left" Height="61" Margin="69,75,0,0" TextWrapping="Wrap" Text="Moje kolekcije" VerticalAlignment="Top" Width="228"                                                FontFamily="Segoe Script" FontSize="24" Grid.Column="3" Foreground="#FFAA3B3B" Grid.RowSpan="2"/>
        <RelativePanel Grid.ColumnSpan="5" Grid.Column="5" HorizontalAlignment="Left" Height="230" Margin="40,44,0,0" Grid.Row="4" Grid.RowSpan="4" VerticalAlignment="Top" Width="307" Background="Black"/>
        <TextBlock x:ConnectionId='8' x:Name="textBlock2"  Grid.ColumnSpan="2" Grid.Column="1" HorizontalAlignment="Left" Margin="60.667,50,0,0" Grid.Row="2" TextWrapping="Wrap" Text="Naziv: " VerticalAlignment="Top" Height="30" Width="68"/>
        <TextBox x:ConnectionId='9' x:Name="textBox" Grid.ColumnSpan="5" Grid.Column="3" HorizontalAlignment="Left" Margin="10,48,0,0" Grid.Row="2" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="287" Height="32" />
        <Button x:ConnectionId='10' x:Name="button2" Content="Nazad" HorizontalAlignment="Left" Height="33" VerticalAlignment="Top" Width="69" Grid.ColumnSpan="2" Background="#33CF1212" Command="{Binding Path=Nazad}"/>
        <Button x:ConnectionId='11' x:Name="button3" Grid.ColumnSpan="3" Content="Sačuvaj" Grid.Column="7" HorizontalAlignment="Left" Height="36" Margin="69,44,0,0" Grid.Row="2" VerticalAlignment="Top" Width="76"                      />


    </Grid>
</Page>

