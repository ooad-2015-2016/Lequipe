        <ComboBox x:ConnectionId='7' x:Name="comboBox" HorizontalAlignment="Right" Height="62" Margin="0,131.667,434,0" Grid.Row="5" VerticalAlignment="Top" Width="254"/>
        <Button x:ConnectionId='8' x:Name="button1" Content="Dodaj film" HorizontalAlignment="Left" Height="62" Margin="508,131.667,0,0" Grid.Row="5" VerticalAlignment="Top" Width="197"                       FontFamily="Segoe Script" Background="#33C7B0B0"/>
